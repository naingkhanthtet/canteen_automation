<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/admin_sidebar.css.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</head>
<body>
<!--side-->
{{> admin_sidebar}}
<div id="sidebar"></div>
<!--side end-->

<section id="admin" class="mt-5">
    <div class="container mx-auto text-centerm-5 p-5 rounded-4"
         style="background-color: white; border: 1px solid rgb(241, 166, 97);">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-sm-6">
                            <i class="fa-solid fa-utensils fs-4" style="color: #000000;"></i>
                            <span style="float: right;">
                                    <h3 class=" text-uppercase">Food Categories </h3>
                                </span>

                        </div>
                        <!-- <div class="col-sm-6 " style="padding-right: 40%;">

                        </div> -->
                    </div>
                </div>


            </div>


            <div class="row mt-5">
                <div class="col-sm-6">
                    <div class="input-group shadow" style="width: 50%;">
                        <input type="search" id="form1" class="form-control" placeholder="Search">
                        <button type="button" class="btn" style="background-color: silver;">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="d-flex justify-content-end">
                        <a href="/addItem">
                            <button type="button" class="btn shadow"
                                    style="background-color: white; border: 1px solid rgb(241, 166, 97);">
                                <div class="px-4">Add Menus</div>
                            </button>
                        </a>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-lg-12 custom-table">
                    <div class="table_body">
                        <table>
                            <thead>
                            <!-- <tr>
                                <th>Manage Items</th>
                            </tr>    -->
                            <tr class="text-center">
                                <th scope="col">ID</th>
                                <th scope="col">Menu Name</th>
                                <th scope="col">Categories</th>
                                <th scope="col">Menu Type</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Price</th>
                                <th scope="col">Image</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody class="text-center">
                            <tr>
                                <th scope="row">1</th>
                                <td>Chicken Curry</td>
                                <td>Curry</td>
                                <td>Noraml item</td>
                                <td>30</td>
                                <td>4000</td>
                                <td class="text-center">
                                    <img src="../../img/food/soup/Tom yum soup.jpeg" alt="This is logo." width="125px"
                                         height="100px">
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn px-3 mt-3">
                                        <i class="fa-solid fa-pen-to-square" style="color: #000000;"></i>
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn px-3 mt-3">
                                        <i class="fa-solid fa-trash" style="color: #000000;"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Pork Curry</td>
                                <td>Curry</td>
                                <td>Noraml item</td>
                                <td>12</td>
                                <td>4000</td>
                                <td class="text-center">
                                    <img src="../../img/food/soup/Kyay Oh.jpeg" alt="This is logo." width="125px"
                                         height="100px">
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn px-3 mt-3">
                                        <i class="fa-solid fa-pen-to-square" style="color: #000000;"></i>
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn px-3 mt-3">
                                        <i class="fa-solid fa-trash" style="color: #000000;"></i>
                                    </button>
                                </td>

                            </tr>

                            <tr>
                                <th scope="row">3</th>
                                <td>Pork Curry</td>
                                <td>Curry</td>
                                <td>Noraml item</td>
                                <td>12</td>
                                <td>4000</td>
                                <td class="text-center">
                                    <img src="../../img/food/soup/Mohinga.jpeg" alt="This is logo." width="125px"
                                         height="100px">
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn px-3 mt-3">
                                        <i class="fa-solid fa-pen-to-square" style="color: #000000;"></i>
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn px-3 mt-3">
                                        <i class="fa-solid fa-trash" style="color: #000000;"></i>
                                    </button>
                                </td>

                            </tr>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
