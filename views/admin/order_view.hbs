<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/admin_sidebar.css.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
<!--side-->
{{> admin_sidebar}}
<div id="sidebar"></div>
<!--side end-->

<section id="admin" class="mt-5">
    <div class="container mx-auto text-center m-5 p-5 rounded-4"
         style="background-color: white; border: 1px solid rgb(241, 166, 97);">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-sm-6">
                            <i class="fa-solid fa-bag-shopping fs-4" style="color: #000000;"></i>
                            <span style="float: right;">
                                    <h3 class=" text-uppercase">Order Lists </h3>
                                </span>

                        </div>
                        <!-- <div class="col-sm-6 " style="padding-right: 40%;">

                        </div> -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 custom-table">
                    <div class="table_body">
                        <table>
                            <thead>
                            <tr>
                                <th scope="col">Order ID</th>
                                <th scope="col">Customer, Batch</th>
                                <th scope="col">Menu Name</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Price</th>
                                <th scope="col">Date and Time</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each orders}}
                                <tr>
                                    <th scope="row">{{this.oid}}</th>
                                    <td>{{this.uname}}, {{this.ubatch}}</td>
                                    <td>{{this.mname}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td>{{this.price}}</td>
                                    <td style="max-width: 200px; word-wrap: break-word;">{{this.odate}}</td>
                                    <td class="text-center">
                                        <a href="/deleteOrder/{{this.oid}}" class="btn px-3 mt-3">
                                            <i class="fa-solid fa-check" style="color: #000000;"></i>
                                        </a>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
</html>